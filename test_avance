#include <stdio.h>
#include <limits.h>
#include "main.h"

/**
* main - Tests avancés pour _printf
*
* Return: Always 0
*/

int main(void)
{
	int ret1, ret2;

	printf("\n========== TESTS AVANCÉS _PRINTF ==========\n\n");

	/* Test 13 : Appel avec NULL */
	ret1 = _printf(NULL);
	printf("Test 13 : Appel avec NULL => retour _printf: %d (attendu : -1)\n\n", ret1);

	/* Test 14 : Spécificateur % non terminé */
	ret1 = _printf("Test de fin %");
	printf("Test 14 : %% seul en fin => retour _printf: %d (attendu : affichage de %% et +1)\n\n", ret1);

	/* Test 15 : Plusieurs % non gérés */
	ret1 = _printf("X %q Y %z Z\n");
	ret2 = printf("X %q Y %z Z\n");
	printf("Test 15 : %% inconnus => _printf: %d | printf: %d\n\n", ret1, ret2);

	/* Test 16 : %s et %c sans fournir d'arguments */
	ret1 = _printf("Oups %s %c fin\n");
	printf("Test 16 : %%s/%%c sans arguments => retour _printf: %d (comportement à observer)\n\n", ret1);

	/* Test 17 : Combinaisons imbriquées de pourcentages */
	ret1 = _printf("%%%%%%\n");
	ret2 = printf("%%%%%%\n");
	printf("Test 17 : %%%% multiple => _printf: %d | printf: %d\n\n", ret1, ret2);

	/* Test 18 : Longues chaînes avec %c, %s et %% */
	ret1 = _printf("Start %c | middle: %s | end: %%%c\n", 'A', "chaine", 'Z');
	ret2 = printf("Start %c | middle: %s | end: %%%c\n", 'A', "chaine", 'Z');
	printf("Test 18 : %%c, %%s et %%%% combinés => _printf: %d | printf: %d\n\n", ret1, ret2);

	printf("========== FIN TESTS AVANCÉS ==========\n\n");
	return (0);
}
